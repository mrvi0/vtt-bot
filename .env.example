# --- Общие настройки ---
# Уровень логирования: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# --- Настройки приложения (Примеры) ---
# Например, для Telegram бота
TELEGRAM_BOT_TOKEN=YOUR_TELEGRAM_BOT_TOKEN_HERE
ADMIN_USER_ID=YOUR_ADMIN_USER_ID_HERE

# Например, для веб-сервиса
SERVICE_PORT=8000
SECRET_KEY=YOUR_VERY_SECRET_KEY_HERE

# Например, для подключения к БД (PostgreSQL)
DATABASE_URL=postgresql://user:password@db_host:5432/dbname

# Добавьте сюда ВСЕ переменные окружения, необходимые для работы вашего приложения
# Оставляйте значения пустыми или используйте плейсхолдеры/нечувствительные дефолты.
# НИКОГДА не коммитьте реальные секреты в .env.example!